<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_begin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/begin_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        >
        <TextView
            android:id="@+id/title_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/head_background"
            android:textColor="#fff"
            android:text="@string/information"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text_gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/begin_menu"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/begin_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_menu_bg"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/table_menu_group"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/table_menu_group_text"
            android:text="关系"
            />
        <TextView
            android:id="@+id/begin_bubble"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_menu_bg"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/table_menu_bubble"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/table_menu_bubble_text"
            android:text="消息"
            />
        <TextView
            android:id="@+id/begin_horse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_menu_bg"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/table_menu_horse"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/table_menu_horse_text"
            android:text="动态"
            />
        <TextView
            android:id="@+id/begin_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_menu_bg"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/table_menu_person"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/table_menu_person_text"
            android:text="我的"
            />

    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/text_gray"
        android:layout_above="@id/begin_menu"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/begin_title"
        android:layout_above="@id/begin_menu"
        android:background="@color/transparent">
    </FrameLayout>

</RelativeLayout>
